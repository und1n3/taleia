<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@color/colorAccentDark</item>
        <item name="android:fontFamily">@font/rajdhani_semibold</item>
        <item name="android:textSize">22sp</item>

    </style>

    <style name="TextCategoriaStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/colorAccentLight</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">26sp</item>
        <item name="android:fontFamily">@font/rajdhani_regular</item>
    </style>

    <style name="TextSettings">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorAccentLight</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
        <item name="android:fontFamily">@font/rajdhani_regular</item>
    </style>

    <style name="TextIdiomes">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimaryLight</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">28sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:fontFamily">@font/rajdhani_regular</item>
    </style>

    <style name="TextBotoStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/colorPrimaryLight</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/rajdhani_semibold</item>
        <item name="android:background">@drawable/btn_rounded</item>
        <item name="android:padding">10dp</item>
    </style>


    <style name="TextIniciStyle">
        <item name="android:textColor">@color/colorAccentLight</item>
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">@font/rajdhani_semibold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="TextBotoInici">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/btn_rounded</item>
        <item name="android:textColor">@color/colorPrimaryLight</item>
    </style>


</resources>
